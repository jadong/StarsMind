<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_root_view"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_app_bar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:text="@string/txt_todo_event"
        android:textColor="@color/main_font_color"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_todo_content"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/view_round_corner"
        android:gravity="top|left"
        android:maxLines="3"
        android:padding="5dp"
        android:textColor="@color/main_font_color"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/txt_reminder_time"
            android:textColor="@color/main_font_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_reminder_time"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/view_round_corner"
            android:gravity="center"
            android:text="2018-10-08"
            android:textColor="@color/main_font_color"
            android:textSize="14sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/txt_confirm" />
</LinearLayout>


